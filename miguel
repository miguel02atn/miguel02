  <script>
    function startGame() {
      // Mostrar el mensaje y ocultar el botón
      document.querySelector('.message').style.display = 'block';
      document.querySelector('.start-button').style.display = 'none';
      
      // Empezar animaciones (corazón, gatito y arco iris)
      document.querySelector('.heart').style.display = 'block';
      document.querySelector('.dancing-cat').style.display = 'block';
    }
  </script>

